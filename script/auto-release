#!/bin/bash
set -e

EMAIL="releases@kenfos.co.uk"
USER_NAME="CI"

function setup {
  git config user.email $EMAIL
  git config user.name $USER_NAME
}

function set_version {
  local version=$1
  lein set-version $version
  git add project.clj
  git commit -m "'auto release bumped version to $version'"
}

function is_merge_commit {
  git log --oneline -1 | grep "Merge pull request"
}

function is_version_specified {
  local commit_message=""
  if is_merge_commit; then
    commit_message=$(eval 'git log --oneline -1')
  else
    commit_message=$(eval 'git log --oneline -2')
  fi
  echo "commit_message"
  echo "$commit_message"
  local version=$(eval "./script/commit-version '$commit_message'")
  echo "version"
  echo "$version"
  [ ![ -z "$version" ] ]
}

function release {
  if is_version_specified; then set_version "$version-SNAPSHOT"; fi
  lein release
}

function is_master_branch {
  [ "$BRANCH_NAME" == "master" ]
}

function is_release_commit {
  git log --oneline -1 | grep "lein-release plugin"
}

function is_release {
  (is_master_branch) && !(is_release_commit)
}

if is_release; then
  setup
  release
  git push
fi
