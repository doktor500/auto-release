#!/bin/bash
set -e

EMAIL="releases@kenfos.co.uk"
USER_NAME="CI"

function setup {
  git config user.email $EMAIL
  git config user.name $USER_NAME
}

function is_merge_commit {
  git log --oneline -1 | grep "Merge pull request"
}

function get_version_from_commit_message {
  local commit_message=""
  if is_merge_commit; then
    commit_message=`git log --oneline -2 | tail -1`
  else
    commit_message=`git log --oneline -1`
  fi
  echo "commit_message"
  echo "$commit_message"
  local version=$(eval "./script/commit-version '$commit_message'")
  echo "$version"
}

function set_version {
  local version=$1
  local snapshot_version="$version-SNAPSHOT"
  # echo "snapshot_version"
  # echo "$snapshot_version"
  lein set-version $snapshot_version
  git add project.clj
  git commit -m "'auto release bumped version to $snapshot_version'"
}

function is_version_specified {
  local version=$1
  [ ! -z "$version" ]
}

function release {
  local version=$(get_version_from_commit_message)
  # echo "release version"
  # echo "$version"
  if is_version_specified "$version"; then set_version "$version"; fi
  lein release
}

function is_master_branch {
  [ "$BRANCH_NAME" == "master" ]
}

function is_release_commit {
  git log --oneline -1 | grep "lein-release plugin"
}

function is_release {
  (is_master_branch) && !(is_release_commit)
}

if is_release; then
  setup
  release
  git push
fi
